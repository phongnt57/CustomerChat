<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.phongnt.phong.chattingtostranger" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.phongnt.phong.chattingtostranger.ApplicationSingleton"
        android:allowBackup="true"
        android:icon="@drawable/compass"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <activity
            android:name="com.phongnt.phong.chattingtostranger.ui.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.phongnt.phong.chattingtostranger.ui.MainActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.phongnt.phong.chattingtostranger.ui.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.phongnt.phong.chattingtostranger.ui.Dialog"
            android:label="@string/title_activity_dialog" >
        </activity>
        <activity
            android:name="com.phongnt.phong.chattingtostranger.ui.ChatActivity"
            android:label="@string/title_activity_chat" >
        </activity>
        <activity
            android:name="com.phongnt.phong.chattingtostranger.ui.NewDialog"
            android:label="@string/title_activity_new_dialog" >
        </activity>
        <activity
            android:name="com.phongnt.phong.chattingtostranger.ui.TabActivity"
            android:label="@string/title_activity_tab" >
        </activity>
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />
    </application>

</manifest>
